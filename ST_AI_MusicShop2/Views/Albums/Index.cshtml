@model IEnumerable<ST_AI_MusicShop2.Models.Album>

@{
    ViewData["Title"] = "Album List";
}

<h3>
    <a asp-controller="Albums" asp-action="Create" class="btn btn-primary">Create new album</a>
</h3>

<div class="container mt-4">
    <div class="row">
        @foreach (var album in Model)
        {
            <div class="col-md-4 mb-4">
                <!-- Adjust column width as needed -->
                <div class="card h-100">
                    <!-- Card with full height -->
                    <img src="@album.PicturePath" alt="Album Picture" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@album.Title</h5>
                        <p class="card-text"><strong>Artist:</strong> @album.Artist</p>
                        <p class="card-text"><strong>Price:</strong> @album.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id" class="btn btn-info">Details</a>
                        <a asp-controller="Albums" asp-action="Edit" asp-route-id="@album.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Albums" asp-action="Delete" asp-route-id="@album.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
